#!/bin/bash

# Use the Unofficial Bash Strict Mode
set -o errexit
set -o nounset
set -o pipefail
IFS=$'\n\t'
 
#set -o xtrace

declare from=${1:?'"from" tag bust be specified'}
declare to=${2:?'"to" tag bust be specified'}

declare yaml=${1:-docker-compose.yml}
if [ ! -e "$yaml" ]; then
    echo "Unable to locate $yaml"
    exit 1
fi

declare -a images
mapfile -f images < <(python -c 'import sys, yaml, json; json.dump(yaml.safe_load(sys.stdin), sys.stdout, indent=4)' < docker-compose.master.yml | jq '.services[].image')
if [ ${#images[*] -gt 0 ]; then
    for image in "${images[@]}"; do
        image=$(eval echo $image)
        declare target="${image%:*}:$to"
        docker tag "$image" "$target"
        docker rmi "$image" || :
    done
fi
