#!/bin/bash
#############################################################################
#
#   dockerComposeServices
#
#############################################################################

declare yaml=${1:-docker-compose.yml}
if [ -e "$yaml" ]; then

    declare jsonConfig=$(python -c 'import sys, yaml, json; json.dump(yaml.load(sys.stdin), sys.stdout, indent=4)' < "$yaml" | jq '.services?')
    if [ "${jsonConfig:-}" ]; then
        for service in $(jq 'keys[]?' <<< "$jsonConfig"); do
            eval echo $service
        done
    fi
else
    echo "Unable to locate $yaml"
fi
