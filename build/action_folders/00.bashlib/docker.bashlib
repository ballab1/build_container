#!/bin/bash
#############################################################################
function docker.UID()
{
    local -r user_name="${1:-docker}"
    local -r default_uid=${2:-${DOCKER_UID:-999}}

    lib.lookupId "$user_name" 'passwd' "$default_uid"
}
export -f docker.UID

#############################################################################
function docker.GID()
{
    local -r group_name="${1:-docker}"
    local -r default_gid=${2:-${DOCKER_GID:-101}}

    lib.lookupId "$group_name" 'group' "$default_gid"
}
export -f docker.GID